{
  "_comment": "Simulate user 'alice' access: internal/public access OR specifically allowed, excluding restricted/confidential unless allowed",
  "rank": {
    "query": [0.5, 0.5, 0.2, 0.4, 0.4],
    "limit": 50
  },
  "where": {
    "$or": [
      { "accessLevel": "public" },
      { "accessLevel": "internal" },
      {
        "$and": [{ "owner": "alice" }]
      }
    ]
  },
  "select": {
    "keys": ["#document", "#score", "owner", "department", "amount", "type", "accessLevel"]
  },
  "limit": 15
}
